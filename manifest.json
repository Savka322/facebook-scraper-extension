{
  "manifest_version": 3,
  "name": "Facebook Data Scraper",
  "version": "1.0",
  "description": "Собирает посты, комментарии и профили пользователей с Facebook",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "sidePanel"
  ],
  
  "host_permissions": [
    "*://facebook.com/*",
    "*://*.facebook.com/*"
  ],
  
  "background": {
    "service_worker": "background/background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["*://facebook.com/*", "*://*.facebook.com/*"],
      "js": ["src/content.js", "src/dataProcessor.js"],
      "css": ["src/content.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_title": "Facebook Data Scraper"
  },
  
  "side_panel": {
    "default_path": "popup/popup.html"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

